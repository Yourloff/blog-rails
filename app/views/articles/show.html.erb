<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<%= link_to 'Редактировать', edit_article_path(@article) %>
<%= link_to 'Удалить', article_path(@article), data: {
  turbo_method: :delete,
  turbo_confirm: 'Вы уверены?'
} %>

<%= link_to 'Все статьи', articles_path %>

<h2>Комментарии:</h2>
<%= render @article.comments %>

<h2>Добавить комментарий:</h2>
<%= render 'comments/form' %>
